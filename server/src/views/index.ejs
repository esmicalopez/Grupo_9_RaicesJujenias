<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content ="#f7a486e1">

  <title>Raíces Jujeñas</title>
  <script src="https://kit.fontawesome.com/a00d13e606.js" crossorigin="anonymous"></script>

  <link rel="shortcut icon" href="images/favicon.svg" type="image/svg+xml">
  <link rel="stylesheet" href="css/style.css">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&family=Roboto:wght@400;500;700&display=swap"
    rel="stylesheet">

</head>

<body id="top">
  
  <!-- HEADER -->

  <%- include("./partials/header.ejs", { inicio: "selected" }) %>

<!-- Alerta de logueo exitoso  -->
  <%- include("./partials/loginSucessAlert.ejs") %>


  <!-- MAIN -->

  <main>


      <!-- Banner Principal -->

      <section class="section banner" style="background-image: url('images/home/banner.png')">
        <div class="container">
          <h2 class="h1 banner-title">Jujuy<strong>Raices Jujeñas</strong></h2>
          <p class="banner-text">Tienda de Productos Artesanales</p>
          <p class="banner-text">¿Quienes Somos?</p>

          <button class="btn btn-primary">
            <span>Sobre Nostros</span>
            <ion-icon name="arrow-forward-outline" aria-hidden="true"></ion-icon>
          </button>

        </div>
      </section>

      <!-- CATEGORIAS -->
      <%- include("./partials/home/categories.ejs", ) %>



      <!--PRODUCTOS MAS VENDIDOS-->

      <section class="section product">
        <div class="container">

          <h2 class="h2 section-title">LOS MAS VENDIDOS</h2>
          
          <%- include("./partials/products/categoryList.ejs", { categories }) %>

          <%- include("./partials/products/productList.ejs", { productsList, offerCalc }) %>
          
        </div>
      </section>

      <!-- TENDENCIAS - OFERTAS -->

      <section class="section cta">
        <div class="container">

          <ul class="cta-list">

            <li>
              <div class="cta-card" style="background-image: url('images/home/cta-1.jpg')">
                <p class="card-subtitle">Tendencias</p>
                <h3 class="h2 card-title">LOS MÁS SOLICITADOS</h3>
                <a href="#" class="btn btn-link">
                  <span>Ir</span>
                  <ion-icon name="arrow-forward-outline" aria-hidden="true"></ion-icon>
                </a>
              </div>
            </li>

            <li>
              <div class="cta-card" style="background-image: url('images/home/cta-2.jpg')">
                <p class="card-subtitle">Descuentos</p>
                <h3 class="h2 card-title">OFERTAS PARA VOS</h3>
                <a href="#" class="btn btn-link">
                  <span>Ir</span>
                  <ion-icon name="arrow-forward-outline" aria-hidden="true"></ion-icon>
                </a>
              </div>
            </li>
          </ul>
        </div>
      </section>

      <!-- PUBLICIDAD LUGARES JUJUY -->
      <%- include("./partials/home/jujuyPlaces.ejs", { places: ["puna", "quebrada", "valles", "yungas"] }) %>
      


      <!-- SERVICIOS-->
      <%- include("./partials/home/services.ejs") %>


      <!-- JUJUY TIRA IMAGENES -->
      <%- include("./partials/home/jujuyPost.ejs") %>

     
  </main>

  <!-- FOOTER -->

  <%- include("./partials/footer.ejs") %>

  <!-- INICIO DE PAGINA -->
  <a href="#top" class="go-top-btn" data-go-top>
    <ion-icon name="arrow-up-outline"></ion-icon>
  </a>

  <script src="js/script.js"></script>

  <!-- ICONOS-->
  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
  <script>
    function closeMessage() {
      const idMessege = document.getElementById("success-message")
      idMessege.classList.remove('show');
    }
    setTimeout(function() {
      closeMessage();
    }, 4000)
    </script>
</body>

</html>