    <link rel="preload" href="images/banner.png" as="image">
</head>
<body>

    <%- include("../partials/header.ejs") %>

    <main>
        <h1>Perfil de Usuario</h1>
        <div class="profile-container">
            <ul class="profile-navbar">
                <li class="navbar-item">Cuenta</li>
                <li class="navbar-item">Contrase√±a</li>
                <li class="navbar-item">Eliminar cuenta</li>
            </ul>
            <div class="profile-info">
                <div class="profile-avatar">
                <img src="/images/users/<%= user.avatar %>" alt="">

                <h3>Nombre: <%= user.name %></h3>
                <h3>Apellido: <%= user.lastName %></h3>
                <h3>Email: <%= user.email %></h3>
                <h3>Rol: <%= user.rol.name %></h3>

                </div>
            </div>
            
        </div>
    </main>

    <%- include('../partials/footer.ejs') %>

    <!-- INICIO DE PAGINA -->
    <a href="#top" class="go-top-btn" data-go-top>
        <ion-icon name="arrow-up-outline"></ion-icon>
