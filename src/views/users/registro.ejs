<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content ="#f7a486e1">
    <title>Formulario de Registro</title>
    <link rel="stylesheet" type="text/css" href="css/registro.css">
</head>
<body>

    <%- include("../partials/header.ejs") %>


    <main>
        <form action="/registro" class="form-container" method="POST" enctype="multipart/form-data">
            <h1>Registro</h1>
            <div class="product-name input-item">
                <label class="product-name__label" for="name">Nombre</label>
                <input class="product-name__input" id="name" type="text" placeholder="Nombre" required autocomplete="nombre" name="name" >
            </div>
    
            <div class="product-last-name input-item">
                <label for="last-name">Apellido</label>
                <input id="last-name" type="text" placeholder="Apellido" name="lastName" required>
            </div>
    
            <div class="input-item">
                <label for="email">Correo Electronico</label>
                <input id="email" type="email" placeholder="ejemplo@gmail.com"  name="email" required>
            </div>
    
            <div class="input-item">
                <label for="date">Fecha de Nacimiento</label>
                <input id="date" type="date" name="date" required>
            </div>
    
            <div class="profile-and-photo">
                <div class="user-profile input-item">
                    <h3>Rol del Usuario</h3>
                    <div class="user-profile-left">
                        <input id="comprador" type="radio" name="userRole" value="administrador" required>
                        <label for="comprador">administrador</label>
                    </div>
                    <div class="user-profile-right">
                        <input id="vendedor" type="radio" name="userRole" value="usuario" required>
                        <label for="vendedor">usuario</label>
                    </div>
                </div>
    
                <div class="product-photo input-item">
                    <label for="profile-picture">Foto de Usuario</label>
                    <input id="profile-picture" type="file" accept=",jpg,png" name="profile-image">
                </div>
            </div>

            <% if (typeof errores !== "undefined" && errores.password) { %>
                <div class="error">
                    <p> <%= errores.password.msg %></p>
                </div>
            <% } %>

            <div class="password input-item">
                <label for="password">Contraseña</label>
                <input id="password" type="password" name="password" minlength="5" required autocomplete="new-password" placeholder="********">
            </div>
        
            <div class="password input-item">
                <label for="repeat-password">Confirmar contraseña</label>
                <input id="repeat-password" name="confirmPassword" type="password" minlength="5" required autocomplete="new-password" placeholder="********">
            </div>

            <div class="input-item terms-and-conditions">
                <input type="checkbox" id="terminos" name="terminos" value ="true" required>
                <label for="terminos">Aceptar <a href="#"> términos y condiciones </a></label>
            </div>
    
            <div class="form-buttons">
                <button type="submit" class="form-button-create">Registrarse</button>
            </div>

            <div class="social-login">
                <span>
                    ¿Ya tienes cuenta? 
                    <a href="/login">Iniciar sesión</a>
                </span>
                <div class="login-buttons">
                    <button>Ingresa con Facebook</button>
                    <button>Ingresa con Google</button>
                </div>
            </div>
        </form>
    </main>


    <%- include("../partials/footer.ejs") %>

    <!-- INICIO DE PAGINA -->
    <a href="#top" class="go-top-btn" data-go-top>
        <ion-icon name="arrow-up-outline"></ion-icon>
    </a>

    <script src="js/script.js"></script>

    <!-- ICONOS-->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</body>
</html>



