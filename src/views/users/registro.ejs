<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content ="#f7a486e1">
    <title>Formulario de Registro</title>
    <link rel="stylesheet" type="text/css" href="css/user.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link
    href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&family=Roboto:wght@400;500;700&display=swap"
    rel="stylesheet">
    <script src="https://kit.fontawesome.com/a00d13e606.js" crossorigin="anonymous"></script>
    <link rel="preload" href="images/banner.png" as="image">
</head>
<body>

    <%- include("../partials/header.ejs") %>


    <main>
        <form action="/registro" class="form-container" method="POST" enctype="multipart/form-data">
            <h1>Registro</h1>

            <div class="full-name">
                <div class="product-name input-item">
                    <% if (typeof errores !== "undefined" && errores.name) { %>
                        <div class="error">
                            <p> <%= errores.name.msg %></p>
                        </div>
                    <% } %>
                    <label class="product-name__label" for="name">Nombre</label>
                    <input class="product-name__input" id="name" type="text" placeholder="Nombre"  autocomplete="nombre" name="name" required>
                </div>
        
                <div class="product-last-name input-item">
                    <% if (typeof errores !== "undefined" && errores.lastName) { %>
                        <div class="error">
                            <p> <%= errores.lastName.msg %></p>
                        </div>
                    <% } %>
                    <label for="last-name">Apellido</label>
                    <input id="last-name" type="text" placeholder="Apellido" name="lastName" required>
                </div>
            </div>

    
            <div class="input-item">
                <% if (typeof errores !== "undefined" && errores.email) { %>
                    <div class="error error-left">
                        <p> <%= errores.email.msg %></p>
                    </div>
                <% } %>
                <label for="email">Correo Electronico</label>
                <input id="email" type="email" placeholder="ejemplo@gmail.com" name="email" required>
            </div>
     
            <div class="profile-and-photo">
                
                <div class="user-profile input-item">
                    <% if (typeof errores !== "undefined" && errores.rol) { %>
                        <div class="error">
                            <p> <%= errores.rol.msg %></p>
                        </div>
                    <% } %>
                    <h3>Rol del Usuario</h3>
                    <div class="user-profile-left">
                        <input id="vendedor" type="radio" name="rol" value="1" required>
                        <label for="vendedor">administrador</label>
                    </div>
                    <div class="user-profile-right">
                        <input id="comprador" type="radio" name="rol" value="2" required>
                        <label for="comprador">usuario</label>
                    </div>
                </div>
    
                <div class="product-photo input-item">
                    <% if (typeof errores !== "undefined" && errores["profile-image"]) { %>
                        <div class="error">
                            <p> <%= errores["profile-image"].msg %></p>
                        </div>
                    <% } %>
                    <label for="profile-picture">Foto de Usuario</label>
                    <input id="profile-picture" type="file" accept=",jpg,png" name="profile-image">
                </div>
            </div>

           

            <div class="password-container">
                <% if (typeof errores !== "undefined" && errores.password) { %>
                        <p class="error"> <%= errores.password.msg %></p>
                <% } %>

                <div>
                    <div class="password input-item">
                        <label for="password">Contraseña</label>
                        <input id="password" type="password" name="password" minlength="8" autocomplete="new-password" placeholder="********" required>
                    </div>
                
                    <div class="password input-item">
                        <label for="repeat-password">Confirmar contraseña</label>
                        <input id="repeat-password" name="confirmPassword" type="password" minlength="8"  autocomplete="new-password" placeholder="********" required>
                    </div>
                </div>

            </div>


            <div class="input-item terms-and-conditions">
                <% if (typeof errores !== "undefined" && errores.terminos) { %>
                        <p class="error error-left"> <%= errores.terminos.msg %></p>
                <% } %>
                <div>
                    <input type="checkbox" id="terminos" name="terminos" value ="true" required>
                    <label for="terminos">Aceptar <a href="#"> términos y condiciones </a></label>
                </div>
            </div>
    
            <div class="form-buttons">
                <button type="submit" class="form-button-create">Registrarse</button>
            </div>

            <div class="social-login">
                <span>
                    ¿Ya tienes cuenta? 
                    <a href="/login">Iniciar sesión</a>
                </span>
                <div class="login-buttons">
                    <button>Ingresa con Facebook</button>
                    <button>Ingresa con Google</button>
                </div>
            </div>
        </form>
    </main>


    <%- include("../partials/footer.ejs") %>

    <!-- INICIO DE PAGINA -->
    <a href="#top" class="go-top-btn" data-go-top>
        <ion-icon name="arrow-up-outline"></ion-icon>
    </a>

    <script src="js/script.js"></script>

    <!-- ICONOS-->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</body>
</html>



