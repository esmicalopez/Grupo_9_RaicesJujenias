<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#f7a486e1">
    <title>Raíces Jujeñas | Producto</title>
    <link rel="shortcut icon" href="images/favicon.svg" type="image/svg+xml">

    <script src="https://kit.fontawesome.com/a00d13e606.js" crossorigin="anonymous"></script>
    <!-- ICONOS -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,900&display=swap" rel="stylesheet">
    <link
        href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&family=Roboto:wght@400;500;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="css/productos.css">
</head>

<body>

    <%- include("./partials/header.ejs") %>




        <main>
            <div class="container">
                <section class="categorias">
                    <ul class="filter-list">
                        <li>
                            <button class="filter-btn  active">Todos</button>
                        </li>
                        <li>
                            <button class="filter-btn">Textiles</button>
                        </li>
                        <li>
                            <button class="filter-btn">Decoración</button>
                        </li>
                        <li>
                            <button class="filter-btn">Joyería</button>
                        </li>

                        <li>
                            <button class="filter-btn">Arte</button>
                        </li>

                        <li>
                            <button class="filter-btn">Gastronómicos</button>
                        </li>

                    </ul>
                </section>
                <section>
                    <ul class="product-list">

                        <% products.forEach( product=> { %>
                            <li class="product-item">
                                <div class="product-card" tabindex="0">

                                    <figure class="card-banner">
                                        <img src="images/product-1.png" width="312" height="350" loading="lazy"
                                            alt="Producto" class="image-contain">

                                        <div class="card-badge">Oferta <%= product.offer %>%</div>

                                        <ul class="card-action-list">

                                            <li class="card-action-item">
                                                <button class="card-action-btn" aria-labelledby="card-label-1">
                                                    <ion-icon name="cart-outline"></ion-icon>
                                                </button>

                                                <div class="card-action-tooltip" id="card-label-1">Agregar al Carrito
                                                </div>
                                            </li>

                                            <li class="card-action-item">
                                                <button class="card-action-btn" aria-labelledby="card-label-2">
                                                    <ion-icon name="heart-outline"></ion-icon>
                                                </button>

                                                <div class="card-action-tooltip" id="card-label-2">Guardar</div>
                                            </li>

                                            <li class="card-action-item">
                                                <button class="card-action-btn" aria-labelledby="card-label-3">
                                                    <ion-icon name="eye-outline"></ion-icon>
                                                </button>

                                                <div class="card-action-tooltip" id="card-label-3">Detalles</div>
                                            </li>

                                            <li class="card-action-item">
                                                <button class="card-action-btn" aria-labelledby="card-label-4">
                                                    <ion-icon name="repeat-outline"></ion-icon>
                                                </button>

                                                <div class="card-action-tooltip" id="card-label-4">Comparar</div>
                                            </li>

                                        </ul>
                                    </figure>

                                    <div class="card-content">
                                        <div class="card-cat">
                                            <a href="#" class="card-cat-link">Categoria</a> /
                                            <a href="#" class="card-cat-link">
                                                <%= product.category %>
                                            </a>
                                        </div>

                                        <h3 class="h3 card-title">
                                            <a href="#">
                                                <%= product.name %>
                                            </a>
                                        </h3>
                                        <data class="card-price" value="180.85">$<%= product.price %></data>
                                    </div>

                                </div>
                            </li>
                        <% }) %>

                    </ul>
                </section>
            </div>
        </main>

        <%- include("./partials/paginacion.ejs") %>


        <%- include("./partials/footer.ejs") %>

</body>

</html>