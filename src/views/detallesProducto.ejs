<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content ="#f7a486e1">
    <title>Raíces Jujeñas</title>
    <link rel="shortcut icon" href="images/favicon.svg" type="image/svg+xml">
    <link rel="stylesheet" href="../css/detallesProducto.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&family=Roboto:wght@400;500;700&display=swap"
        rel="stylesheet">
</head>

<body id="top">
    <!-- HEADER -->

    <%- include("./partials/header.ejs") %>

    <!--MAIN-->

    <h2 class="h2 section-title" style="text-align: center; display: block;">DETALLE DE PRODUCTO</h2>

    <main>
        <div class="container-img">
            <img src="/images/products/<%= product.image || 'incognita.png' %>" alt="imagen-producto" style="margin: auto; display: block; align-self: center">
        </div>

        <div class="container-info-product">
            <div class="container-name-product">
                <%= product.name %>
            </div>
            <div class="container-price">
                <% if(product.offer !== 0){ %>
                    <div class="card-price-product" style="width: 70%;"  value="180.85">
                        <div class="card-price-product">
                            <del class="old-price" style="justify-self: flex-start;">
                                $<%= product.price %>
                            </del>
                            <span>
                                $<%= offerCalc(product.price, product.offer) %>
                            </span>
                        </div>
                        <div style="font-size: 16px; color: #666;" >
                             ¡%<%= product.offer %> DE DESCUENTO!
                        </div>
                    </div>
                <% } else { %>
                    <div class="card-price-product">
                        $<%= product.price %>
                    </div>
                <% } %>
                <!--<span>$<%= product.price %></span>-->
                <i class="fa-solid fa-angle-right"></i>
            </div>
            <div class="container-details-product">
                <form action="" method="get">
                    <% if(product.colors[0]){ %>
                        <div class="form-group">
                            <label for="colour">Color</label>
                            <select name="colour" id="colour">
                                <option disabled selected value="">
                                    Escoge una opción
                                </option>
                                    <% product.colors.forEach( color => { %>
                                        <option value="<%= color %>"><%= color %></option>
                                    <% })%>
                            </select>
                        </div>
                    <% } %>
                    <div class="form-group">
                        <label for="size">Tamaño / Talle</label>
                        <select name="size" id="size">
                            <option disabled selected value="">
                                Escoge una opción
                            </option>
                            <% product.sizes.forEach( tamaño => { %>
                                <option value="<%= tamaño %>"><%= tamaño %></option>
                            <% })%>
                        </select>
                    </div>
                    <button class="btn-clean" type="reset">Limpiar</button>
                </form>
            </div>

            <div class="container-add-cart">
                <div class="container-quantity">
                    <input type="number" placeholder="1" value="1" min="1" class="input-quantity" />
                    <div class="btn-increment-decrement">
                        <i class="fa-solid fa-chevron-up" id="increment"></i>
                        <i class="fa-solid fa-chevron-down" id="decrement"></i>
                    </div>
                </div>
                <button class="btn-add-to-cart">
                    <i class="fa-solid fa-plus"></i>
                    Añadir al carrito
                </button>
                <a href="/productos/<%= product.id %>/edit" 
                    style="align-self: center; color: #cb6843; font-weight: 800;">
                    Editar Producto
                </a>
                <form action="/productos/<%= product.id %>/eliminar?_method=DELETE" method="POST"  style="display: flex;">
                    <button style="align-self: center; color: #be3503; font-weight: 800;" type="submit">Eliminar Producto</button>
                </form>
            </div>



            <div class="container-additional-information">
                <div class="title-additional-information">
                    <h4>Descripcion</h4>
                    <i class="fa-solid fa-chevron-down"></i>
                </div>
                <div class="text-additional-information">
                    <p><%= product.description %></p>
                </div>
            </div>

            <div class="container-reviews">
                <div class="title-reviews">
                    <h4>Reseñas</h4>
                    <i class="fa-solid fa-chevron-down"></i>
                </div>
                <div class="text-reviews hidden">
                    <p>-----------</p>
                </div>
            </div>

            <div class="container-social">
                <span>Compartir</span>
                <div class="container-buttons-social">
                    <a href="#"><i class="fa-solid fa-envelope"></i></a>
                    <a href="#"><i class="fa-brands fa-facebook"></i></a>
                    <a href="#"><i class="fa-brands fa-twitter"></i></a>
                    <a href="#"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#"><i class="fa-brands fa-pinterest"></i></a>
                </div>
            </div>
        </div>
    </main>
    <section class="container-related-products">
        <h2>Productos Relacionados</h2>
        <div class="card-list-products">
            <% newProductsList.forEach((p) => { %>
            <div class="card">
                <div class="card-img">
                    <a href="/productos/<%= p.id %>"><img src="/images/products/<%= p.image || 'incognita.png' %>"  alt="producto-4" /></a>
                </div>
            </div>
            <% }) %>
        </div>
    </section>

    <!-- FOOTER -->

    <%- include("./partials/footer.ejs") %>

    <!-- INICIO DE PAGINA -->
    <a href="#top" class="go-top-btn" data-go-top>
        <ion-icon name="arrow-up-outline"></ion-icon>
    </a>

    <script src="js/script.js"></script>

    <!-- ICONOS-->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="https://kit.fontawesome.com/81581fb069.js" crossorigin="anonymous"></script>
    <script src="js/producto.js"></script>
</body>

</html>