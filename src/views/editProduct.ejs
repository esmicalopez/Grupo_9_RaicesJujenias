<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#f7a486e1">
    <title>Editar Producto | Raíces Jujeñas </title>
    <link rel="shortcut icon" href="images/favicon.svg" type="image/svg+xml">

    <link rel="stylesheet" href="/css/editProduct.css">
    <script src="https://kit.fontawesome.com/a00d13e606.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,900&display=swap" rel="stylesheet">
    <link
        href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&family=Roboto:wght@400;500;700&display=swap"
        rel="stylesheet">
</head>
<body>
    <%- include("./partials/header.ejs") %>
    
<main>
    <form action="/productos/<%= product.id %>/<%= chosenProductSpec.id %>/edit?_method=PUT" class="form-container" method="POST" enctype="multipart/form-data">
        <h1>Editar Producto:</h1>
        <h3><%= product.name  %> / Color <%= chosenProductSpec.color.name %> - Tamaño/Talle <%= chosenProductSpec.size.name %></h3>

        <div class="product-name input-item">
            <label class="product-name__label" for="name">Nombre del Producto</label>
            <input class="product-name__input" id="name" type="text" placeholder="Nombre del Producto" required autocomplete="nombre" name="name" value="<%= product.name %>">
        </div>

        <div class="product-price input-item">
            <label for="price">Precio</label>
            <input id="price" type="number" placeholder="Precio"  name="price" required value="<%= chosenProductSpec.price %>">
        </div>

        <div class="input-item">
            <label for="offer">Oferta</label>
            <input id="offer" type="number" placeholder="Descuento en porcentaje. Ej: 5, 10, 20"  name="offer" max="99" required value="<%= chosenProductSpec.offer || 0 %>">
        </div>

        <div class="input-item">
            <label for="stock">Cantidad</label>
            <input id="stock" type="number" placeholder="Cantidad disponible"  name="stock" required value="<%= chosenProductSpec.stock %>"> 
        </div>

        <div class="product-status input-item">
            <label for="color">Colores</label>
            <select name="color" id="color" required>
                <option selected value="<%= chosenProductSpec.color_id %>">
                    <%= chosenProductSpec.color.name %>
                </option>
                <% for( color of colors ) { %>
                    <% if (color.name === chosenProductSpec.color.name) { continue } %>
                    <option value="<%= color.id %>"> <%= color.name %> </option>
                <% } %>
            </select>
        </div>

        <div class="product-status input-item">
            <label for="size">Talle</label>
            <select name="size" id="size" required>
                <option selected value="<%= chosenProductSpec.size_id %>">
                    <%= chosenProductSpec.size.name %>
                </option>
                <% for( size of sizes ) { %>
                    <% if (size.name === chosenProductSpec.size.name) { continue } %>
                    <option value="<%= size.id %>"> <%= size.name %> </option>
                <% } %>
            </select>
        </div>

        <div class="product-category input-item">
            <label for="category">Categoria</label>
            <select  name="category" id="category" required>
                <option selected value="<%= product.category_id %>">
                    <%= product.category.name %>
                </option>
                <% for( category of categories ) { %>
                    <option value="<%= category.id %>"> <%= category.name %> </option>
                <% } %>

            </select>
        </div>

        <div class="product-photo input-item">
            
            <label for="profile-picture">Foto del Producto</label>
            <div class="">
                <input id="profile-picture" type="file" accept=",jpg,png" value="<%= chosenProductSpec.images[0] ? chosenProductSpec.images[0].name : 'nada.jpg' %>" name="product-image">
                <div class="product-photo-img">
                    <img src="/images/products/<%= chosenProductSpec.images[0] ? chosenProductSpec.images[0].name : '' %>" alt="<%= product.name  %> - <%= chosenProductSpec.color.name %>">
                </div>
            </div>
        </div>

        <div class="product-description input-item">
            <label class="product-description__label " for="descripcion">Descripcion</label>
            <textarea class="product-description__textarea" name="description" id="descripcion" cols="30" rows="10" required> <%= product.description %> </textarea>
        </div>

        <div class="form-buttons">
            <button type="submit" class="form-button-modify">Modificar Producto</button>
        </div>
    </form>
    
    <h2 style="text-align: center;">Productos Relacionados</h2>
        <div class="card-list-products">
            <% newProductsList.forEach((p) => { %>

                <div class="card-list-products" style="flex-direction: column;">
                    <% if (p.images[0]) { %>
                        <div class="card">
                            <div class="card-img">
                                <a href="/productos/<%= p.product_id %>/<%= p.id %>/edit"><img src="/images/products/<%= p.images[0].name %>"  alt="producto-<%= p.id %>" /></a>
                            </div>
                        </div>
                        <div style="margin: 10px; font-weight: bold; ">
                            <%= p.color.name %> 
                        </div> 
                        <div style="margin: 10px; font-weight: bold; ">
                            Tamaño/Talle: <%= p.size.name %> 
                        </div>
                    <% } else { %>
                        <div class="card">
                            <div class="card-img">
                                <a href="/productos/<%= p.product_id %>/<%= p.id %>/edit"><img src="/images/products/<%= detail[0].images[0] ? detail[0].images[0] : '' %>"  alt="producto-<%= p.id %>" /></a>
                            </div>
                        </div>
                        <div style="margin: 10px; font-weight: bold; ">
                            Color: <%= p.color.name %> 
                        </div>
                        <div style="margin: 10px; font-weight: bold; ">
                            Tamaño/Talle: <%= p.size.name %> 
                        </div>
                    <% } %>
                </div>
            
            <% }) %>
        </div>

</main>


    <%- include("./partials/footer.ejs") %>

    <!-- INICIO DE PAGINA -->
    <a href="#top" class="go-top-btn" data-go-top>
        <ion-icon name="arrow-up-outline"></ion-icon>
    </a>

    <script src="js/script.js"></script>

    <!-- ICONOS-->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>